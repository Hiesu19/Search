<div class="mt-4">
    <form method="POST" , action="/courses/store">
        <div class="form-group">
            <label for="title">Title</label>
            <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Nhập tiêu đề"
            />

        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input
                type="text"
                class="form-control"
                id="author"
                name="author"
                placeholder="Nhập tác giả"
            />

        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input
                type="text"
                class="form-control"
                id="description"
                name="description"
                placeholder="Nhập mô tả"
            />

        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input
                type="text"
                class="form-control"
                id="price"
                name="price"
                placeholder="Nhập giá"
            />

        </div>
        <div class="form-group">
            <label for="img_thumbnail">Thumbnail</label>
            <input
                type="text"
                class="form-control"
                id="img_thumbnail"
                name="img_thumbnail"
                placeholder="Nhập thumbnai"
            />

        </div>
        <div class="form-group">
            <label for="videoID">VideoID</label>
            <input
                type="text"
                class="form-control"
                id="videoID"
                name="videoID"
                placeholder="Nhập videoID"
            />

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
</div>