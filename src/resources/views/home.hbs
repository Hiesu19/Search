<div class="mt-4">
    <div class="row">

        {{#each courses}}
            <div class="col-sm-6 col-lg-4">
                <div class="card card-course-item">
                    <img
                        src="{{this.img_thumbnail}}"
                        class="card-img-top"
                        alt="..."
                    />
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-description">{{this.description}}</p>
                        <p class="card-author">Author: {{this.author}}</p>

                        <a href="#" class="btn btn-primary">Get now</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>